<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.fxmisc.richtext.CodeArea?>
<?import org.fxmisc.flowless.VirtualizedScrollPane?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
	fx:id="queryWithResultBox" BorderPane.alignment="CENTER"
	xmlns="http://javafx.com/javafx/8.0.121"
	fx:controller="nl.bos.controllers.QueryWithResult">
	<SplitPane dividerPositions="0.6" orientation="VERTICAL"
		VBox.vgrow="ALWAYS">
		<VBox>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
			<Label text="Result" />
			<TableView fx:id="result" VBox.vgrow="ALWAYS" />
		</VBox>
		<VBox>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
			<Label text="DQL/SQL Statement" />
			<VirtualizedScrollPane VBox.vgrow="ALWAYS">
				<content>
					<CodeArea fx:id="statement" VBox.vgrow="ALWAYS"></CodeArea>
				</content>
			</VirtualizedScrollPane>

			<Label text="DQL/SQL History" />
			<HBox>
				<ComboBox fx:id="historyStatements" />
			</HBox>
			<Label layoutX="15.0" layoutY="206.0" text="DQL/SQL Favorites">
				<VBox.margin>
					<Insets top="5.0" />
				</VBox.margin>
			</Label>
			<HBox layoutX="15.0" layoutY="241.0">
				<opaqueInsets>
					<Insets />
				</opaqueInsets>
				<VBox.margin>
					<Insets />
				</VBox.margin>
				<ComboBox fx:id="favoriteStatements" />
			</HBox>
		</VBox>
	</SplitPane>
</VBox>
